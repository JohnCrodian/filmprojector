<div class="calendar-container">
<h2 class="subject-heading">What's showing today?</h2>

<% @screenings_today.each do |screening| %>
	<p class="one-line-screening"> <a href= <%= screening.link %> > "<%=screening.title %>" at <%= screening.location %></a></p>
<% end %>

<h2 class="subject-heading">Selected Screenings</h2>



<div class="card-group">
<% @posts.last(3).each do |highlight| %>
  <div class="card">
  	
  <h3 class="card-date"> <%= highlight.screenings[0].showtime.strftime('%A, %B %d') %> </h3>
    <img class="card-img-top" src=<%= highlight.avatar %> >
    <div class="card-block">
      <h4 class="card-title">"<%= highlight.screenings[0].title %>" at <%= highlight.screenings[0].location %></h4>
      </div>
    </div>
   
  <% end %>
  </div>

</div>
